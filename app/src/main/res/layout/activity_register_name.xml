<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegisterName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/white_background2"
        android:translationZ="3dp"
        android:padding="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/xIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_x"
                />

            <EditText
                android:id="@+id/playerx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/xIcon"
                android:background="@drawable/white_background2"
                android:backgroundTint="@color/lightest_gray"
                android:hint="Player 1"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/oIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_o"
                />

            <EditText
                android:id="@+id/playero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/oIcon"
                android:background="@drawable/white_background2"
                android:backgroundTint="@color/lightest_gray"
                android:hint="Player 2"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"

                />
        </RelativeLayout>

        <Button
            android:id="@+id/continueGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background2"
            android:backgroundTint="@color/blue"
            android:layout_marginTop="50dp"
            android:text="Continue"
            android:textColor="@color/white"
            />
    </LinearLayout>


</RelativeLayout>